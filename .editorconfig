# EditorConfig is awesome: https://EditorConfig.org

# プロジェクト全体の設定
root = true

# すべてのファイルのデフォルト設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C#ファイルの設定
[*.cs]
indent_size = 4
indent_style = space

# Unity関連ファイル
[*.{meta,asset,prefab,unity,anim,controller,overrideController}]
indent_size = 2
indent_style = space

# JSONファイル
[*.json]
indent_size = 2
indent_style = space

# XMLファイル
[*.xml]
indent_size = 2
indent_style = space

# Markdownファイル
[*.md]
trim_trailing_whitespace = false

# YAMLファイル
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# シェルスクリプト
[*.sh]
end_of_line = lf

# バイナリファイルは除外
[*.{png,jpg,jpeg,gif,ico,psd,tga,tif,tiff,dll,so,dylib,exe,apk,aab,aar,jar,zip,tar,gz}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

